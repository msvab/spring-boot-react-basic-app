{
  "parser": "babel-eslint",
  "ecmaFeatures": {
    "jsx": true,
    "modules": true,
    "classes": true
  },
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "mocha": true
  },
  "plugins": [
    "react"
  ],

  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],

  "rules": {
    "no-console": 0,
    "no-alert": 2,
    "no-extra-bind": 2,
    "no-loop-func": 2,
    "no-redeclare": 2,
    "no-return-assign": 2,
    "no-unused-expressions": 2,
    "no-void": 2,
    "no-with": 2,
    "no-const-assign": 2,
    "no-dupe-class-members": 2,
    "no-var": 2,
    "prefer-arrow-callback": 2,
    "prefer-spread": 2,

    "react/prop-types": "off",
    "react/display-name": "off",
    "react/no-did-mount-set-state": "off"
  }
}
